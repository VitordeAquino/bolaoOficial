<div class="box">
	<%= link_to (image_tag current_user.pins.first.image.url(:medium)), pin %>
	<p class="description">
	<%= pin.descricao %>
	</p>
	<p>
		<strong>
			Posted by <%= pin.user.email %>
		</strong>	
	</p>
	<% if current_user == pin.user %>
		<p> <%= link_to 'Edit', edit_pin_path(pin) %>
		<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>




